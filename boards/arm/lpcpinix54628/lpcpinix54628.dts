/dts-v1/;

#include <nxp/nxp_lpc54xxx_m4.dtsi>

/ {
	model = "NXP LPCPINIX54628 board";
	compatible = "lpcpinix54628", "nxp,lpc";
	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	soc {
		
		iap: flash-controller@4009c000 {
			compatible = "nxp,lpc-iap";
			label = "FLASH_IAP";
			reg = < 0x4009c000 0x18 >;
			#address-cells = < 0x1 >;
			#size-cells = < 0x1 >;
			flash0: flash@0 {
				compatible = "soc-nv-flash";
				reg = < 0x0 0x80000 >;
				label = "LPC_FLASH";
				erase-block-size = < 0x100 >;
				write-block-size = < 0x100 >;
			};
		};
		gpio3: gpio@3 {
			comptible = "nxp,lpc-gpio";
			reg = <0x4008C000 0x4000>, <0x40000000 0x1000>;

			label = "GPIO_3";
			gpio-controller;
			#gpio-cells = <2>;
			port = <0x3>;

			status = "okay";
		};


	};
};
